{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Definition Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nom de la pipeline"
    },
    "description": {
      "type": "string",
      "description": "Description de la pipeline"
    },
    "icon": {
      "type": "string",
      "description": "Icône pour l'interface"
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      }
    }
  },
  "required": ["name", "description", "tasks"],
  "definitions": {
    "task": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Nom de la tâche"
        },
        "description": {
          "type": "string",
          "description": "Description de la tâche"
        },
        "commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Liste des noms de commandes à exécuter"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tâches qui doivent être complétées avant celle-ci"
        },
        "parallel": {
          "type": "boolean",
          "default": false,
          "description": "Si les commandes peuvent être exécutées en parallèle"
        }
      },
      "required": ["name", "commands"]
    }
  }
}
