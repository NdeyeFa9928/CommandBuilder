{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Command Definition Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nom de la commande"
    },
    "description": {
      "type": "string",
      "description": "Description de l'objectif de la commande"
    },
    "category": {
      "type": "string",
      "enum": ["import", "analysis", "export", "utility"],
      "description": "Catégorie de la commande"
    },
    "executable": {
      "type": "string",
      "description": "Nom de l'exécutable ou script"
    },
    "parameters": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/parameter"
          }
        },
        "optional": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/parameter"
          }
        }
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Types d'entrées attendues"
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Types de sorties produites"
    }
  },
  "required": ["name", "description", "category", "executable", "parameters"],
  "definitions": {
    "parameter": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Nom du paramètre"
        },
        "flag": {
          "type": "string",
          "description": "Flag de ligne de commande (ex: --config)"
        },
        "type": {
          "type": "string",
          "enum": ["file", "directory", "string", "integer", "float", "boolean"],
          "description": "Type de données du paramètre"
        },
        "description": {
          "type": "string",
          "description": "Description du paramètre"
        },
        "default": {
          "description": "Valeur par défaut"
        },
        "validation": {
          "type": "object",
          "properties": {
            "file_extensions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "min_value": {
              "type": "number"
            },
            "max_value": {
              "type": "number"
            },
            "pattern": {
              "type": "string"
            }
          }
        }
      },
      "required": ["name", "type", "description"]
    }
  }
}
